<body>
  <!-- Main content -->
  <div class="main-content">
    <!-- Top navbar -->
    <div><%- include('../partials/admin/navbar'); %></div>
    <%- include('../partials/admin/header'); %>
    <!-- Page content -->
    <div class="container-fluid mt--7">
      <!-- Table -->
      <div class="row">
        <div class="col">
          <div class="card shadow">
            <div class="card-header border-0">
              <h3 class="mb-0">Add Blog</h3>
              <main>
                <form
                  class="mt-5"
                  method="post"
                  action="/blog/create"
                  enctype="multipart/form-data"
                >
                  <div class="mb-3">
                    <label class="form-label">Blog Title</label>
                    <input
                      required
                      type="text"
                      class="form-control"
                      name="title"
                      id="blogTitle"
                    />
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Blog Slug</label>
                    <input
                      required
                      type="text"
                      class="form-control"
                      name="slug"
                      id="blogSlug"
                    />
                  </div>
                  <div class="form-floating mb-3">
                    <textarea
                      required
                      name="description"
                      class="form-control"
                      placeholder="Leave a description here"
                      style="height: 100px"
                    ></textarea>
                    <label for="floatingTextarea2">Description</label>
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Thumbnail</label>
                    <input
                      required
                      type="file"
                      name="thumbnail"
                      class="form-control"
                      id="thumbnailInput"
                    />
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Category</label>
                    <select
                      required
                      name="category"
                      class="form-select"
                      aria-label="Default select example"
                    >
                      <% category.forEach(function(cat){ %>
                      <option value="<%= cat.name %>"><%= cat.name %></option>
                      <% }); %>
                    </select>
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Publish date</label>
                    <input required type="date" id="start" name="publishedAt" />
                  </div>

                  <button type="submit" class="btn btn-primary">Submit</button>
                </form>
              </main>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
<script>
  // Get references to the title and slug input fields
  const blogTitleInput = document.getElementById("blogTitle");
  const blogSlugInput = document.getElementById("blogSlug");

  // Add an input event listener to the title field
  blogTitleInput.addEventListener("input", function () {
    // Get the value of the title field
    const title = blogTitleInput.value;

    // Generate a slug based on the title (e.g., "My Blog Title" => "my-blog-title")
    const slug = title
      .toLowerCase() // Convert to lowercase
      .replace(/ /g, "-") // Replace spaces with dashes
      .replace(/[^a-z0-9-]/g, ""); // Remove any characters that are not letters, numbers, or dashes

    // Set the generated slug in the slug input field
    blogSlugInput.value = slug;
  });
</script>
